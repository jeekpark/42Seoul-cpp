NAME		=	run

CXX			=	c++
CXXFLAGS	=	#-Wall -Wextra -Werror -std=c++98

SRCS		=	main.cpp		\
				AMateria.cpp	\
				Ice.cpp			\
				Character.cpp	\
				Node.cpp		\
				List.cpp

OBJS		=	$(SRCS:.cpp=.o)

%.o : %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

all : $(NAME)

$(NAME) : $(OBJS)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)

clean :
	$(RM) $(OBJS)

fclean :
	$(RM) $(OBJS) $(NAME)

re :
	make fclean
	make all

.PHONY: all clean fclean re